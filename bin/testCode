#!/bin/bash

curPath=`pwd`

#echo $curPath

testPath=`echo $curPath | sed -r 's/(^\/home\/mballiet_fni_stl_com\/)projects\/([^\/]*).*/\\1tests\/\\2/'`
launchPath=`echo $curPath | sed -r 's/(^\/home\/mballiet_fni_stl_com\/projects\/[^\/]*).*/\1/'`

echo 'Tests loded from : '$testPath
echo 'Start in         : '$launchPath

testName=$1

if [ "$testName" = "" ] ; then
	if [ ! -e $testPath ] ; then
		mkdir $testPath
	fi
        ls -lF $testPath
else
	$testPath/$testName
fi

